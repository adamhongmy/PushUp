<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.williams.asd.Notication"
    android:background="#ff52c94d">

    <TextView android:text="Select Date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mm"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <TextView android:text="Select Time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dd"
        android:layout_marginTop="109dp"
        android:layout_below="@+id/mm"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/setNotf"
        android:id="@+id/btnNotf"
        android:onClick="btnConfirm"
        android:background="@drawable/rectorange_focused"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="57dp"
        android:textSize="25dp"
        android:textColor="@android:color/white"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Back"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="btnHomeNotf"
        android:background="@drawable/flatblue_selector"
        android:textColor="@android:color/white"
        android:textSize="25dp"/>

</RelativeLayout>
