<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.williams.asd.TotalPushUp"
    android:id="@+id/totalPushUp">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnMute"
        android:background="@drawable/flatorange_selector"
        android:text="Mute"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        android:id="@+id/btnMute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView99"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="90dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnNext"
        android:background="@drawable/flatgreen_selector"
        android:layout_alignParentRight="true"
        android:text="->"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:id="@+id/btnNext" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_rest"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btnRest"
        android:background="@drawable/flatblue_selector"
        android:textColor="@android:color/white"
        android:textSize="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/btnRedButton"
        android:onClick="btnPressMe"
        android:background="@drawable/red_button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
